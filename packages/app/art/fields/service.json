{
      "关联服务": {
            "edit": {
                  "type": "table",
                  "props": {
                        "name": "service",
                        "query": {
                              "id": "1",
                              "name": ":manu.name"
                        }
                  }
            }
      },
      "服务信息": {
            "view": {
                  "type": "block",
                  "components": {
                        "avatar": "营销图片",
                        "name": "服务名称",
                        "desc": "服务类型"
                  }
            }
      },
      "营销图片": {
            "view": {
                  "type": "image",
                  "props": {
                        "value": ":images",
                        "width": 40,
                        "height": 40
                  }
            },
            "edit": {
                  "type": "upload",
                  "props": {
                        "value": ":images",
                        "filetype": "image",
                        "multiple": true,
                        "maxCount": 1
                  }
            }
      },
      "服务名称": {
            "view": {
                  "type": "label",
                  "props": {
                        "value": ":name"
                  }
            },
            "edit": {
                  "type": "textArea",
                  "props": {
                        "value": ":name",
                        "rows": 3
                  }
            }
      },
      "所属厂商": {
            "view": {
                  "name": "label",
                  "props": {
                        "value": ":manu.short_name"
                  }
            },
            "edit": {
                  "type": "mentions",
                  "props": {
                        "value": ":manu_id",
                        "autoSize": true,
                        "search": {
                              "api": "/api/select/search",
                              "key": "keyword"
                        }
                  }
            }
      },
      "服务类型": {
            "view": {
                  "name": "label",
                  "props": {
                        "value": ":kind.name"
                  }
            },
            "edit": {
                  "type": "select",
                  "props": {
                        "bind": "kind.id",
                        "value": ":kind_id",
                        "showSearch": true,
                        "remote": {
                              "api": "/api/kind/get",
                              "query": {
                                    "select": [
                                          "id",
                                          "name"
                                    ],
                                    "useValue": true
                              }
                        }
                  }
            }
      },
      "计费方式": {
            "view": {
                  "name": "tags",
                  "props": {
                        "value": ":price_options"
                  }
            },
            "edit": {
                  "type": "select",
                  "props": {
                        "value": ":price_options",
                        "mode": "multiple",
                        "options": [
                              {
                                    "label": "按年订阅",
                                    "value": "按年订阅"
                              },
                              {
                                    "label": "按月订阅",
                                    "value": "按月订阅"
                              },
                              {
                                    "label": "按量计费",
                                    "value": "按量计费"
                              },
                              {
                                    "label": "私有化部署",
                                    "value": "私有化部署"
                              },
                              {
                                    "label": "其他",
                                    "value": "其他"
                              }
                        ]
                  }
            }
      },
      "行业覆盖": {
            "view": {
                  "name": "tags",
                  "props": {
                        "value": ":industries"
                  }
            },
            "edit": {
                  "type": "select",
                  "props": {
                        "value": ":industries",
                        "mode": "multiple",
                        "options": [
                              {
                                    "label": "房地产",
                                    "value": "房地产"
                              },
                              {
                                    "label": "旅游",
                                    "value": "旅游"
                              },
                              {
                                    "label": "教育",
                                    "value": "教育"
                              },
                              {
                                    "label": "互联网",
                                    "value": "互联网"
                              },
                              {
                                    "label": "其他",
                                    "value": "其他"
                              }
                        ]
                  }
            }
      },
      "创建时间": {
            "view": {
                  "type": "chartModal",
                  "props": {
                        "name": "compare",
                        "value": ":created_at",
                        "format": "YYYY年MM月DD日 hh:mm:ss"
                  }
            }
      },
      "更新时间": {
            "view": {
                  "name": "label",
                  "props": {
                        "value": ":update_at",
                        "format": "YYYY年MM月DD日 hh:mm:ss"
                  }
            }
      }
}