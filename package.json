{
      "private": true,
      "homepage": "https://yaoapps.com",
      "workspaces": [
            "packages/*"
      ],
      "scripts": {
            "dev": "turbo run dev",
            "build": "turbo run build",
            "dev:app": "turbo run dev --filter=@yaoapp/app",
            "build:app": "turbo run build --filter=@yaoapp/app",
            "dev:types": "turbo run build --filter=@yaoapp/types",
            "build:types": "turbo run build --filter=@yaoapp/types"
      },
      "gitHooks": {
            "pre-commit": "lint-staged --allow-empty"
      },
      "lint-staged": {
            "*.{js,jsx,less,md,json}": [
                  "prettier --write"
            ],
            "*.ts?(x)": [
                  "prettier --parser=typescript --write"
            ]
      },
      "devDependencies": {
            "lint-staged": "^13.0.3",
            "prettier": "^2.7.1",
            "turbo": "^1.4.7",
            "yorkie": "^2.0.0"
      }
}